@{
}
<link href="~/css/estilos.css" rel="stylesheet" type="text/css">
<div class="container">
    <div class="row">
        <div class="col-5">
<table class="table table-striped">
    <tr>
        <td>ID</td>
        <td>@ViewBag.producto.Id</td>
    </tr>
    <tr>
        <td>Nombre</td>
        <td>@ViewBag.producto.Nombre</td>
    </tr>
    <tr>
        <td>Foto</td>
        <td><img src="~/imagenes/@ViewBag.producto.Foto"></td>
    </tr>
    <tr>
        <td>Precio</td>
        <td>@ViewBag.producto.Precio</td>
    </tr>
    <tr>
        <td>Cantidad</td>
        <td>@ViewBag.producto.Cantidad</td>
    </tr>
    <tr>
        <td>Total</td>
        <td>@(ViewBag.producto.Precio * ViewBag.producto.Cantidad)</td>
    </tr>
</table>
        </div>
    </div>
</div>