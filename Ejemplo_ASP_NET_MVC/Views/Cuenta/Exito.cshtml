@{
}
<div class="container-lg">
    <!--agergar título, si se quiere-->
    <div class="row justify-content-center my-5">
        <div class="col-lg-6">
            <table>
                <tr>
                    <td>ID</td>
                    <td>@ViewBag.cuenta.Id</td>
                </tr>
                <tr>
                    <td>Usuario</td>
                    <td>@ViewBag.cuenta.Usuario</td>
                </tr>
                <tr>
                    <td>Contraseña</td>
                    <td>@ViewBag.cuenta.Password</td>
                </tr>
                <tr>
                    <td>Descripción</td>
                    <td>@ViewBag.cuenta.Descripcion</td>
                </tr>
                <tr>
                    <td>Disponible</td>
                    <td>@ViewBag.cuenta.Disponible</td>
                </tr>
                <tr>
                    <td valign="top">Lenguajes</td>
                    <td>
                        @foreach (string lenguaje in ViewBag.cuenta.Lenguajes)
                        {
                            <span>@lenguaje</span><br>
                        }
                    </td>
                </tr>
                <tr>
                    <td>Género</td>
                    <td>@ViewBag.cuenta.Genero</td>
                </tr>
                <tr>
                    <td>Cargo</td>
                    <td>@ViewBag.cuenta.Cargo</td>
                </tr>
            </table>
        </div>
    </div>
</div>